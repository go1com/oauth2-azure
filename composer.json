{
    "name": "go1/oauth2-azure",
    "description": "Microsoft Azure OAuth 2.0 support for the PHP League's OAuth 2.0 Client",
    "type": "library",
    "require": {
        "league/oauth2-client": "^2.4",
        "firebase/php-jwt": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "mockery/mockery": "^1.2"
    },
    "config": {
        "platform": {
            "php": "7.3.10"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jared Fraser",
            "email": "jared.fraser@go1.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Go1\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Go1\\OAuth2\\Client\\Test\\": "test/src/"
        }
    }
}
